@page "{id:int}"
@model OnlineStore.Pages.Admin.Orders.DetailsModel
@{
    ViewData["Title"] = "Детали заказа";
}

<div class="container">
    <h3>Детали заказа #@Model.Order?.Id</h3>

    @if (Model.Order == null)
    {
        <div class="alert alert-warning">Заказ не найден</div>
    }
    else
    {
        <div class="mb-3">
            <strong>Пользователь:</strong> @Model.Order.UserId <br />
            <strong>Дата:</strong> @Model.Order.OrderDate.ToString("dd.MM.yyyy HH:mm") <br />
            <strong>Статус:</strong> <span class="badge bg-secondary">@Model.Order.Status</span>
        </div>

        <h5>Товары</h5>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Товар</th>
                        <th>Цена</th>
                        <th>Количество</th>
                        <th>Сумма</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Order.Items)
                    {
                        <tr>
                            <td>@(item.Product?.Name ?? "Неизвестно")</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Price* item.Quantity).ToString("C")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end"><strong>Итого:</strong></td>
                        <td><strong>@Model.Order.TotalAmount.ToString("C")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="mt-3">
            <a asp-page="/Admin/Index" asp-route-section="orders" class="btn btn-secondary">Назад</a>
        </div>
    }
</div>